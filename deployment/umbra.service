[Unit]
Description=uWSGI instance to serve umbra
After=network.target

[Service]
User=pasta
Group=www-data
WorkingDirectory=/home/pasta/umbra
Environment="PATH=/home/pasta/anaconda3/envs/umbra/bin"
ExecStart=/home/pasta/anaconda3/envs/umbra/bin/uwsgi --ini deployment/umbra.ini

[Install]
WantedBy=multi-user.target